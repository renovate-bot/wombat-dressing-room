// save the user's github token to verify repo access on key based publish
 createUser = (
  username: string,
  githubToken: string
): Promise<{}> => {
   (!config.loginEnabled) {
     Promise.reject(
       Error('login/creation of new users is disabled on this server.')
    );
  }

  // The kind for the new entity
   kind = 'User';
  // The Cloud Datastore key for the new entity
   key = datastore.key([kind, username]);

  // Prepares the new entity
  const user = {
    key,
    data: {name: username, token: githubToken},
  };

  // Saves the entity
   datastore.save(user);
};

